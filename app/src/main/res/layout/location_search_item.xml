<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:alpha=".95">

    <ImageView
        android:id="@+id/iv_location_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_location_icon"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/tv_location_search_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginLeft="13dp"
            android:paddingRight="12dp"
            />

        <TextView
            android:id="@+id/tv_location_search_subdescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_alignLeft="@+id/tv_location_search_description"
            android:layout_below="@+id/tv_location_search_description"
            android:text="Subdescription"
            android:textColor="@color/light_gray"
            android:layout_marginTop="-2dp"
            android:paddingRight="12dp"/>

    </RelativeLayout>

</RelativeLayout>